[user]
	name = David Gasperoni
	email = mcdado@gmail.com
[core]
	excludesfile = /Users/David/.gitignore_global
	autocrlf = input
[push]
	default = simple
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	compactionHeuristic = true
	tool = Kaleidoscope
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = true
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	dt = difftool
	lg = log -p
	lol = log --oneline --all --decorate --full-history --color
	tree = log --graph --oneline --all --decorate --full-history --color
	last = log -1 HEAD
	new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
	top-committers = shortlog -sn --
	who-was-here = !sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -
	case-check = !git ls-tree -r --name-only HEAD | tr A-Z a-z | sort | uniq -d
	pushtoall = "!git remote | xargs -n 1 git push"
	tags = tag
	branches = branch -a -vv
	stash-all = stash save --include-untracked
	stashes = stash list
	remotes = remote -v
	precommit = diff --cached --diff-algorithm=minimal -w
	rprune = fetch --prune
	uncommit = reset --mixed HEAD~
	discard = checkout --
	untrack = rm --cache --
	unstage = reset HEAD --
	nuke = !git reset --hard HEAD && git clean -d -f
	cane = commit --amend --no-edit
[url "https://"]
	insteadOf = git://
